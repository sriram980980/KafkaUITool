<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kafkatool.ui.controller.enhanced.MetricsDashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Broker URLs:" />
            <TextField fx:id="brokerUrlsField" prefWidth="300.0" promptText="localhost:9092" />
            <Button fx:id="connectButton" text="Connect" />
            <Label fx:id="statusLabel" text="Not connected" />
            <Separator orientation="VERTICAL" />
            <Label text="Refresh:" />
            <ComboBox fx:id="refreshIntervalCombo" prefWidth="100.0" />
            <Button fx:id="refreshButton" text="Refresh Now" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <TabPane fx:id="metricsTabPane" VBox.vgrow="ALWAYS">
         <tabs>
            <!-- Cluster Metrics Tab -->
            <Tab text="Cluster Metrics" closable="false">
               <content>
                  <SplitPane dividerPositions="0.7" orientation="VERTICAL">
                     <items>
                        <HBox spacing="10.0">
                           <children>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Throughput" styleClass="chart-title" />
                                    <LineChart fx:id="clusterThroughputChart" VBox.vgrow="ALWAYS">
                                       <xAxis>
                                          <CategoryAxis />
                                       </xAxis>
                                       <yAxis>
                                          <NumberAxis />
                                       </yAxis>
                                    </LineChart>
                                 </children>
                              </VBox>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Latency" styleClass="chart-title" />
                                    <LineChart fx:id="clusterLatencyChart" VBox.vgrow="ALWAYS">
                                       <xAxis>
                                          <CategoryAxis />
                                       </xAxis>
                                       <yAxis>
                                          <NumberAxis />
                                       </yAxis>
                                    </LineChart>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <VBox>
                           <children>
                              <Label text="Cluster Metrics Details" styleClass="section-header" />
                              <TableView fx:id="clusterMetricsTable" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="metricNameColumn" text="Metric" prefWidth="200.0" />
                                    <TableColumn fx:id="metricValueColumn" text="Value" prefWidth="100.0" />
                                    <TableColumn fx:id="metricUnitColumn" text="Unit" prefWidth="80.0" />
                                    <TableColumn fx:id="metricCategoryColumn" text="Category" prefWidth="120.0" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </items>
                  </SplitPane>
               </content>
            </Tab>
            
            <!-- Topic Metrics Tab -->
            <Tab text="Topic Metrics" closable="false">
               <content>
                  <VBox>
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Select Topic:" />
                              <ComboBox fx:id="topicSelector" prefWidth="200.0" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <SplitPane dividerPositions="0.7" orientation="VERTICAL" VBox.vgrow="ALWAYS">
                           <items>
                              <HBox spacing="10.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Topic Throughput" styleClass="chart-title" />
                                          <LineChart fx:id="topicThroughputChart" VBox.vgrow="ALWAYS">
                                             <xAxis>
                                                <CategoryAxis />
                                             </xAxis>
                                             <yAxis>
                                                <NumberAxis />
                                             </yAxis>
                                          </LineChart>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Topic Size" styleClass="chart-title" />
                                          <LineChart fx:id="topicSizeChart" VBox.vgrow="ALWAYS">
                                             <xAxis>
                                                <CategoryAxis />
                                             </xAxis>
                                             <yAxis>
                                                <NumberAxis />
                                             </yAxis>
                                          </LineChart>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <TableView fx:id="topicMetricsTable" />
                           </items>
                        </SplitPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Consumer Group Metrics Tab -->
            <Tab text="Consumer Groups" closable="false">
               <content>
                  <VBox>
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Select Consumer Group:" />
                              <ComboBox fx:id="consumerGroupSelector" prefWidth="200.0" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <SplitPane dividerPositions="0.6" orientation="VERTICAL" VBox.vgrow="ALWAYS">
                           <items>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Consumer Lag" styleClass="chart-title" />
                                    <LineChart fx:id="consumerLagChart" VBox.vgrow="ALWAYS">
                                       <xAxis>
                                          <CategoryAxis />
                                       </xAxis>
                                       <yAxis>
                                          <NumberAxis />
                                       </yAxis>
                                    </LineChart>
                                 </children>
                              </VBox>
                              
                              <TableView fx:id="consumerMetricsTable" />
                           </items>
                        </SplitPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Broker Metrics Tab -->
            <Tab text="Broker Metrics" closable="false">
               <content>
                  <VBox>
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Select Broker:" />
                              <ComboBox fx:id="brokerSelector" prefWidth="100.0" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        
                        <SplitPane dividerPositions="0.7" orientation="VERTICAL" VBox.vgrow="ALWAYS">
                           <items>
                              <HBox spacing="10.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="CPU Usage" styleClass="chart-title" />
                                          <LineChart fx:id="brokerCpuChart" VBox.vgrow="ALWAYS">
                                             <xAxis>
                                                <CategoryAxis />
                                             </xAxis>
                                             <yAxis>
                                                <NumberAxis />
                                             </yAxis>
                                          </LineChart>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Memory Usage" styleClass="chart-title" />
                                          <LineChart fx:id="brokerMemoryChart" VBox.vgrow="ALWAYS">
                                             <xAxis>
                                                <CategoryAxis />
                                             </xAxis>
                                             <yAxis>
                                                <NumberAxis />
                                             </yAxis>
                                          </LineChart>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <TableView fx:id="brokerMetricsTable" />
                           </items>
                        </SplitPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>