<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kafkatool.ui.controller.enhanced.SchemaRegistryController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Schema Registry URL:" />
            <TextField fx:id="schemaRegistryUrlField" prefWidth="300.0" promptText="http://localhost:8081" />
            <Button fx:id="connectButton" text="Connect" />
            <Label fx:id="statusLabel" text="Not connected" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <SplitPane dividerPositions="0.3, 0.7" VBox.vgrow="ALWAYS">
         <items>
            <!-- Subjects Panel -->
            <VBox>
               <children>
                  <Label text="Subjects:" styleClass="section-header" />
                  <ListView fx:id="subjectsList" VBox.vgrow="ALWAYS" />
                  <HBox spacing="5.0">
                     <children>
                        <Button fx:id="deleteSubjectButton" text="Delete Subject" />
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            
            <!-- Versions Panel -->
            <VBox>
               <children>
                  <Label text="Versions:" styleClass="section-header" />
                  <ListView fx:id="versionsList" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            
            <!-- Schema Details Panel -->
            <VBox fx:id="schemaDetailsPane">
               <children>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Compatibility:" />
                        <ComboBox fx:id="compatibilityCombo" prefWidth="150.0" />
                        <Button fx:id="registerSchemaButton" text="Register New Schema" />
                     </children>
                  </HBox>
                  
                  <Label text="Schema Content:" styleClass="section-header">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  
                  <TextArea fx:id="schemaContent" VBox.vgrow="ALWAYS" 
                           wrapText="false" 
                           styleClass="code-area" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>