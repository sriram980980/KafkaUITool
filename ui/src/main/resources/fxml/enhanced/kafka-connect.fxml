<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kafkatool.ui.controller.enhanced.KafkaConnectController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Kafka Connect URL:" />
            <TextField fx:id="connectUrlField" prefWidth="300.0" promptText="http://localhost:8083" />
            <Button fx:id="connectButton" text="Connect" />
            <Label fx:id="statusLabel" text="Not connected" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <Label fx:id="clusterInfoLabel" text="Cluster Info: Not available" styleClass="info-label">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
      
      <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
         <items>
            <!-- Connectors Table -->
            <VBox>
               <children>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Connectors:" styleClass="section-header" />
                        <Button fx:id="createConnectorButton" text="Create Connector" />
                     </children>
                  </HBox>
                  
                  <TableView fx:id="connectorsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="80.0" />
                        <TableColumn fx:id="classColumn" text="Class" prefWidth="200.0" />
                        <TableColumn fx:id="tasksColumn" text="Tasks" prefWidth="60.0" />
                     </columns>
                  </TableView>
                  
                  <HBox spacing="5.0">
                     <children>
                        <Button fx:id="deleteConnectorButton" text="Delete" />
                        <Button fx:id="pauseResumeButton" text="Pause/Resume" />
                        <Button fx:id="restartButton" text="Restart" />
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            
            <!-- Connector Details Panel -->
            <VBox fx:id="connectorDetailsPane">
               <children>
                  <Label text="Connector Configuration:" styleClass="section-header" />
                  
                  <TextArea fx:id="connectorConfigArea" VBox.vgrow="ALWAYS" 
                           wrapText="false" 
                           editable="false"
                           styleClass="config-area" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>